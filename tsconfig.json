{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": false,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": [ "src/**/*", "__tests__" ],
  "exclude": ["node_modules"]
}
